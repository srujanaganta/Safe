<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.srujana.security"
    android:installLocation="auto"
    android:versionCode="89"
    android:versionName="3.4.23">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Security"
        android:theme="@style/AppDefaultThemeDark">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Security">

        </activity>
        <activity android:name=".MainActivity1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".AnotherMsgActivity"
            android:label="Security"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>


        <activity android:name=".PreferencesActivity"></activity>
        <activity
            android:name=".SlideTabsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>

        <receiver android:name=".IncomingSms">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>