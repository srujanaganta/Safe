<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->


    <style name="AppBaseThemeDark" parent="AppDefaultThemeDark">
        <item name="btn_ic_action_copy">@drawable/ic_action_copy_dark</item>
        <item name="btn_ic_action_map">@drawable/ic_action_map_dark</item>
        <item name="btn_ic_action_share">@drawable/ic_action_share_dark</item>
        <item name="btn_ic_action_save">@drawable/ic_action_save_dark</item>
        <item name="btn_ic_action_new_label">@drawable/ic_action_new_label_dark</item>
        <item name="btn_ic_action_send_now">@drawable/ic_action_send_now_dark</item>
        <item name="btn_ic_action_person">@drawable/ic_action_person_dark</item>

        <item name="android:colorButtonNormal">@color/lolli_top_dt</item>
    </style>

    <style name="AppBaseThemeLight" parent="AppDefaultThemeLight">
        <item name="android:colorButtonNormal">@color/lolli_btn_lt</item>
    </style>

    <style name="AppThemeYellow" parent="AppThemeYellowBase">
        <item name="android:colorButtonNormal">@color/lolli_btn_yellow</item>
    </style>

    <style name="AppThemePink" parent="AppThemePinkBase">
        <item name="android:colorButtonNormal">@color/lolli_btn_pink</item>
    </style>

    <style name="AppThemeTeal" parent="AppThemeTealBase">
        <item name="android:colorButtonNormal">@color/lolli_top_teal</item>
    </style>

    <style name="AppThemeGrey" parent="AppThemeGreyBase">
        <item name="android:colorButtonNormal">@color/lolli_top_grey</item>
    </style>


</resources>
